@model CharityCalculator.UI.Models.RateVM

@{
    ViewData["Title"] = "Create";
}

<h1>Create</h1>

<h4>Rate</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form data-ajax="true" data-ajax-success="getPartialView" asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="RateInPercentage" class="control-label"></label>
                <input asp-for="RateInPercentage" class="form-control" />
                <span asp-validation-for="RateInPercentage" class="text-danger"></span>
            </div>
            @Html.LabelFor(m => m.RateType)
            @Html.DropDownListFor(m => m.RateType, Model.RateTypes)
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a data-ajax="true" data-ajax-success="getPartialView" asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
