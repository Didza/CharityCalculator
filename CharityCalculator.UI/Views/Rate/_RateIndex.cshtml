@model IEnumerable<CharityCalculator.UI.Models.RateVM>

@{
    ViewData["Title"] = "Index";
}

<h1>Rates</h1>

<p>
    <a data-ajax="true" data-ajax-success="getPartialView" asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.RateInPercentage)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.RateType)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.RateInPercentage)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.RateType)
            </td>
            <td>
                <form data-ajax="true" data-ajax-success="getPartialView" asp-action="Edit" asp-route-id="@item.Id" method="get">
                    <button type="submit" class="btn btn-link">
                        Edit
                    </button>
                </form>
                <form data-ajax="true" data-ajax-success="getPartialView" asp-action="Details" asp-route-id="@item.Id" method="get">
                    <button type="submit" class="btn btn-link">
                        Details
                    </button>
                </form>
                <form data-ajax="true" data-ajax-success="getPartialView" asp-action="Delete" asp-route-id="@item.Id" method="post">
                    <button type="submit" class="btn btn-link" onclick="return confirm('Are you sure you want to delete this record?')">
                        Delete
                    </button>
                </form>
            </td>
        </tr>
}
    </tbody>
</table>
